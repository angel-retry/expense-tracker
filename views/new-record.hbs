{{>header}}
<div class="container d-flex justify-content-center" >
  <form action="/records" method="post" style="max-width: 800px; width: 100%;">
  <h2 class="fw-bold text-center my-3">請輸入你的支出</h2>
  <div class="form-row mb-3">
    <div class="form-row mb-3">
      <label for="name" class="form-label">名稱</label>
      <input type="text" id="name" class="form-control" name="name" placeholder="請輸入名稱" required>
    </div>
    <div class="form-row mb-3">
      <label for="date" class="form-label">時間</label>
      <input type="date" id="date" class="form-control" name="date"  required>
    </div>
    <div class="form-row mb-3">
      <label for="category" class="form-label">類別</label>
      <select name="category" id="category" class="form-control">
        <option value="">請選擇類別</option>
        {{#each categories}}
        <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-row mb-3">
      <label for="amount" class="form-label">金額</label>
      <input type="number" name="amount" id="amount" class="form-control"></input>
    </div>
    <div class="form-row text-center">
      <button type="submit" class="btn btn-primary col-md-5 col-12 py-2">新增支出</button>
    </div>
  </form>
</div>